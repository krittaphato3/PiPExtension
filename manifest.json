{
  "manifest_version": 3,
  "name": "FullPiP - Ultimate Picture-in-Picture",
  "version": "2.4.0",
  "author": "krittaphato3",
  "description": "Professional-grade PiP tool. Memory optimized, multi-frame support, and smart thumbnails.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "documentPictureInPicture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FullPiP Control Center"
  },
  "commands": {
    "toggle-pip": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Toggle PiP for the main media on page"
    }
  }
}